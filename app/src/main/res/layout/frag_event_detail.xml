<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#171A3B"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/reminder">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="14dp"
                android:src="@drawable/loadings" />

            <TextView
                android:id="@+id/venue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Venue:"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/venue_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/venue"
                android:padding="5dp"
                android:text="drawing hall"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView3"
                android:layout_alignLeft="@+id/venue_detail"
                android:layout_alignStart="@+id/venue_detail"
                android:padding="5dp"
                android:text="Date:"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date"
                android:padding="5dp"
                android:text="30/05/2017"
                android:textColor="#ffffff" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:layout_marginTop="150dp"
                android:background="#ffffff" />
        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="400dp">

            <TextView
                android:id="@+id/even_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/heading"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/even_name"
                android:text="tjhcuuyc gv vvg gwrgwe  wg8wg8gwrvg8w g8v weg c8ew8 v 8v8sd8cg wcet7wf7c7c7fv77wb eww7ydsd d7d7c7c7w ds777v dvdvdv7sf7 v7wfd7vwd .cducds yvuydsv "
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:id="@+id/event_detail"
                />


            <TextView
                android:id="@+id/reminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/event_detail"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="70dp"
                android:layout_marginStart="22dp"
                android:background="@drawable/back"
                android:gravity="center"
                android:padding="5dp"
                android:text="REMINDER"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/showingmore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/event_detail"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="70dp"
                android:layout_marginEnd="14dp"
                android:background="@drawable/back"
                android:gravity="center"
                android:text="SHOW MORE"
                android:textColor="#ffffff"
                android:textStyle="bold" />

        </RelativeLayout>


        </ScrollView>


    </LinearLayout>




</RelativeLayout>