
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/backtohome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/eeeevents"
            android:layout_marginBottom="14dp"
            android:background="@drawable/back"
            android:backgroundTint="#FFFFFF"
            android:onClick="click"
            android:shadowColor="@color/background"
            android:text="HOME"
            android:textColor="#000000" />

        <Button
            android:id="@+id/generalevents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_above="@+id/cseevents"
            android:layout_alignStart="@+id/cseevents"
            android:layout_gravity="center"
            android:layout_marginBottom="22dp"
            android:background="@drawable/back"
            android:backgroundTint="#FDAC40"
            android:onClick="click"
            android:padding="10dp"
            android:shadowColor="@color/background"
            android:text="GENERAL" />

        <Button
            android:id="@+id/meevents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_above="@+id/backtohome"
            android:layout_alignStart="@+id/backtohome"
            android:layout_marginBottom="11dp"
            android:background="@drawable/back"
            android:backgroundTint="#FDAC40"
            android:onClick="click"
            android:padding="10dp"
            android:shadowColor="@color/background"
            android:text="ME" />

        <Button
            android:id="@+id/cseevents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_above="@+id/meevents"
            android:layout_alignStart="@+id/meevents"
            android:layout_marginBottom="16dp"
            android:background="@drawable/back"
            android:backgroundTint="#F17384"
            android:onClick="click"
            android:padding="10dp"
            android:shadowColor="@color/background"
            android:text="cse" />

        <Button
            android:id="@+id/itevents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/generalevents"
            android:layout_alignStart="@+id/eceevents"
            android:layout_gravity="center"
            android:layout_marginBottom="26dp"
            android:background="@drawable/back"
            android:backgroundTint="#547AF6"
            android:onClick="click"
            android:padding="10dp"
            android:shadowColor="@color/background"
            android:text="IT" />

        <Button
            android:id="@+id/eceevents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_above="@+id/itevents"
            android:layout_alignStart="@+id/eeeevents"
            android:layout_gravity="center"
            android:layout_marginBottom="22dp"
            android:background="@drawable/back"
            android:backgroundTint="#33C1E3"
            android:onClick="click"
            android:padding="10dp"
            android:shadowColor="@color/background"
            android:text="EC" />

        <Button
            android:id="@+id/eeeevents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_above="@+id/eceevents"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="22dp"
            android:background="@drawable/back"
            android:backgroundTint="#7AC7CB"
            android:onClick="click"
            android:padding="10dp"
            android:shadowColor="@color/background"
            android:text="EEE" />


    </RelativeLayout>

</RelativeLayout>


        